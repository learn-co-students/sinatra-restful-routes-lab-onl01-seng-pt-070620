<form action="/recipes/<%= @recipe.id %>" method="post">
    <input type="hidden" id="hidden" name="_method" value="patch">
    <label>Name: <input type="text" name="name" id="name"></label><br>
    <label>Ingredients: <input type="text" name="ingredients" id="ingredients" value="<%= @recipe.ingredients %>"></label><br>
    <label>Cook Time: <input type="text" name="cook_time" id="cook_time"></label><br>
    <input type="submit" value="update">
</form>